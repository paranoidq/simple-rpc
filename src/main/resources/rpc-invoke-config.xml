<?xml version="1.0" encoding="utf-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:component-scan base-package="me.sprc.core"/>
    <context:property-placeholder location="classpath:rpc-server.properties"/>
    <bean id="rpcBean" class="me.sprc.model.ServiceBeanHolder">
        <property name="serviceHolder">
            <map>
                <entry key="me.sprc.service.Calculate">
                    <ref bean="calc"/>
                </entry>
            </map>
        </property>
    </bean>

    <bean id="calc" class="me.sprc.service.CalculateImpl"/>
    <bean id="rpcServer" class="me.sprc.core.server.MessageReceiveExecutor">
        <constructor-arg name="serverAddress" value="${rpc.server.address}"/>
    </bean>

</beans>