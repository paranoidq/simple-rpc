<?xml version="1.0" encoding="utf-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:nettyrpc="http://www.srpc.me/nettyrpc"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
       http://www.srpc.me/nettyrpc http://www.srpc.me/nettyrpc/nettyrpc.xsd">

    <!--<context:component-scan base-package="me.srpc.nettyy"/>-->

    <context:property-placeholder location="classpath:rpc-server.properties"/>

    <nettyrpc:reference id="addCalc" interfaceName="me.srpc.service.AddCalculate" ipAddr="${rpc.server.addr}" protocol="JDK_SERIALIZE"/>
    <nettyrpc:reference id="multiCalc" interfaceName="me.srpc.service.MultiCalculate" ipAddr="${rpc.server.addr}" protocol="JDK_SERIALIZE"/>
</beans>