<?xml version="1.0" encoding="utf-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:nettyrpc="http://www.srpc.me/nettyrpc" xsi:schemaLocation="
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
    http://www.srpc.me/nettyrpc http://www.srpc.me/nettyrpc/nettyrpc.xsd">

    <!--<context:component-scan base-package="me.srpc.nettyy"/>-->

    <context:property-placeholder location="classpath:rpc-server.properties"/>

    <!-- 定义Rpc服务接口 -->
    <nettyrpc:service id="demoAddService" interfaceName="me.srpc.service.AddCalculate" ref="addService"></nettyrpc:service>
    <nettyrpc:service id="demoMultiService" interfaceName="me.srpc.service.MultiCalculate" ref="multiService"></nettyrpc:service>

    <nettyrpc:registry id="rpcRegistry" ipAddr="${rpc.server.address}" echoApiPort="${rpc.server.echo.api.port}" protocol="JDK_SERIALIZE"/>

    <bean id="addService" class="me.srpc.service.AddCalculateImpl"/>
    <bean id="multiService" class="me.srpc.service.MultiCalculateImpl"/>
</beans>